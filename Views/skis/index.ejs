
    <% layout('layouts/boilerplate') %>


       <div id="cluster-map"></div>
        <h1>All Mountains</h1>

        <ul>
            <% for(let ski of skis) {%>
                <div class="card mb-3">
                    <div class="col-md-4">
                        <% if(ski.images.length) { %>
                        <img class="img-fluid" alt="" src="<%=ski.images[0].url%>">
                        <%} else { %>
                            <img crossorigin="anonymous" class="img-fluid" alt="" src="https://media.istockphoto.com/id/657455668/photo/scenes-of-lake-louise-in-dawn.jpg?s=1024x1024&w=is&k=20&c=iDDr9QFWK0Kyfif4xjCbPdKC0G9iP5Een0eKkPYk-GA=">
                        <% }%>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=ski.title%></h5>
                            <p class="card-text"><%=ski.description%>
                            <small class="text-muted"><%=ski.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/skis/<%=ski._id%>">View <%=ski.title%></a>
                        </div>
                    </div>
                </div>
            <% } %>
        </ul>
        <script>
             const mapToken ='<%-process.env.MAPBOX_TOKEN%>';
             const skis = {features: <%-JSON.stringify(skis) %>};
        </script>

        <script src="/javascripts/clusterMap.js"></script>
